<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTopBarBackground"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlAccountSettingTopBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorCommentNumberText"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/ibtnAccountSettingBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@mipmap/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="账号设置"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorActivityBackground" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlAccountSettingTopBar"
        android:background="@color/colorActivityBackground">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etOriginPassword"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="原密码"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etNewPassword"
            android:hint="新密码"
            android:layout_below="@+id/etOriginPassword"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/etOriginPassword"
            android:layout_alignStart="@+id/etOriginPassword"
            android:layout_alignRight="@+id/etOriginPassword"
            android:layout_alignEnd="@+id/etOriginPassword" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etRePassword"
            android:hint="重复密码"
            android:layout_below="@+id/etNewPassword"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/etNewPassword"
            android:layout_alignStart="@+id/etNewPassword"
            android:layout_alignRight="@+id/etNewPassword"
            android:layout_alignEnd="@+id/etNewPassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:background="@color/colorTopBarBackground"
            android:textSize="16dp"
            android:textColor="@color/colorActivityBackground"
            android:id="@+id/btnConfirm"
            android:layout_below="@+id/etRePassword"
            android:layout_marginTop="40dp"
            android:layout_alignLeft="@+id/etRePassword"
            android:layout_alignStart="@+id/etRePassword"
            android:layout_alignRight="@+id/etRePassword"
            android:layout_alignEnd="@+id/etRePassword" />
    </RelativeLayout>


</RelativeLayout>
